<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
	<LinearLayout
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:layout_centerVertical="true"
	>
 	<Button
 	  android:id="@+id/add_light_btn"
      android:layout_width="match_parent"
      android:layout_height="60dp"
	  android:layout_weight="1"
      android:textSize="18sp"
	  android:text="@string/add_light"
	  android:background="@color/deepGray"
	  android:textColor="@color/white"
	  android:layout_margin="5dp"
     />
	<Button
 	  android:id="@+id/reduce_light_btn"
      android:layout_width="match_parent"
      android:layout_height="60dp"
	  android:layout_weight="1"
      android:textSize="18sp"
	  android:text="@string/reduce_light"
	  android:background="@color/deepGray"
	  android:textColor="@color/white"
	  android:layout_margin="5dp"
     />
 	</LinearLayout>
	
	
    <Button
        android:id="@+id/pass_btn"
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:text="@string/text_pass"
        android:textColor="@color/white"
        android:background="@drawable/pass_button_style"
        android:textSize="30sp" />
    <Button
        android:id="@+id/fail_btn"
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:text="@string/text_fail"
        android:textColor="@color/white"
        android:background="@drawable/fail_button_style"
        android:textSize="30sp" />
</RelativeLayout>